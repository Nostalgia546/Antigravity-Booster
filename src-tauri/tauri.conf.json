{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "antigravity-booster",
  "version": "1.2.1",
  "identifier": "com.tz.antigravity-booster",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:5122",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Antigravity Booster",
        "width": 1650,
        "height": 1080,
        "center": true,
        "decorations": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "resources": [
      "resources/version.dll"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "wix": {
        "language": [
          "zh-CN"
        ]
      },
      "nsis": {
        "languages": [
          "SimpChinese"
        ],
        "installerIcon": "icons/icon.ico"
      }
    }
  }
}